# Production Environment Variables Template
# Copy these to Vercel's environment variables dashboard

# Supabase Configuration (Required)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Application URL (Update with your Vercel domain)
NEXT_PUBLIC_APP_URL=https://renovation-advisor.vercel.app

# OpenAI API (Required for voice processing)
OPENAI_API_KEY=

# Twilio WhatsApp (Required for SMS/WhatsApp)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_NUMBER=

# NotificationAPI (Optional - for email/SMS)
NOTIFICATIONAPI_CLIENT_ID=
NOTIFICATIONAPI_CLIENT_SECRET=

# Feature Flags
USE_MOCK_GPT=false

# Admin Contact
ADMIN_EMAIL=admin@renovationadvisor.com
ADMIN_PHONE=+15551234567

# Optional Integrations
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=